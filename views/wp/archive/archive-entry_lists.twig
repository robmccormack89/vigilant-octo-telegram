{% extends "base.twig" %}

{% block contentwrap %}
  <div data-block="content-wrap" data-template="archive-entry_lists.twig">
    
    <div class="blog-wrap">
      
      <div uk-grid>
        
        <div class="uk-width-auto@s">
          <h1 class="uk-text-bold dark-text">{{ title }}</h1>
        </div>
        
      </div>
      
      <div class="uk-child-width-1-2@s uk-child-width-1-3@m archive-posts margin-top-30" uk-grid="masonry: true">
        {% for post in posts %}
          {% include ['tease-entry_lists.twig'] %}
        {% endfor %}
        {% if posts is empty %}
        <p class="uk-text-emphasis">Nothing posted here yet....</p>
        {% endif %}
      </div>
      
      {% if is_paginated %}
        {% include 'pagination.twig' %}
      {% endif %}
      
    </div>
      
  </div>
{% endblock %}

{% block spec_scripts %}
  {% if is_paginated %}
    <script type="text/javascript" src="/wp-content/themes/sixstar-theme/assets/js/main/scroll.js"></script>
  {% endif %}
{% endblock %}